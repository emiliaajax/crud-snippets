<div id="createForm">
  <form method="post" action="./create">
    <div class="form-group">
      <input id="createTitle" name="title" type="text" maxlength="100" placeholder="Title...">
      <input id="createLanguage" name="language" type="text" maxlength="50" placeholder="Language...">
      <textarea id="createDescription" name="description" max-length="8000" placeholder="Describe code..."></textarea>
      <textarea id="createSnippet" name='snippet' maxlength='8000' placeholder='Write code...'></textarea>
    </div>
    <button type="submit" class="btn btn-lg btn-primary">Create</button>
  </form>
</div>