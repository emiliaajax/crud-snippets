<div id='registerForm'>
  <p>Register at SnippetRoom&trade;</p>
  <form class='px-4 px-1' id='register' method='post' action='./users/register'>
    <div class='form-group'>
      <input type='text' class='form-control mb-3' id='username' name='username' minlength="3" maxlength="1000" pattern="[a-z]{0,9}" placeholder='Username (a-z, 0-9)'>
    </div>
    <div class='form-group'>
      <input type='email' class='form-control mb-3' id='email' name='email' placeholder="E-mail">
    </div>
    <div class='form-group'></div>
    <input type='password' class='form-control mb-3' id='password' name='password' minlength="8" maxlength="2000" placeholder="Password">
    <button type='submit' class='btn-btn-primary'>Register</button>
  </form>
</div>